{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended",
    "include": [
        "src/**/*"
    ]
}
